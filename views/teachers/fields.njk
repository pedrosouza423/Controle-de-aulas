
<div class="item">
    <div>Avatar URL</div>
    <div><input type="url" name="avatar_URL" placeholder="http://" value='{{teacher.avatar_URL}}' ></div>
</div>

<div class="item">
    <div>Professor</div>
    <div><input type="text" name="name" placeholder="Lucio Fontinele" value='{{teacher.name}}' ></div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div><input type="date" name="birth"></div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="educational_level">
            <option value="high_school">Ensino Médio Completo</option>
            <option value="University_education" selected>Ensino Superior Completo</option>
            <option value="master">Mestrado</option>
            <option value="doctorate">Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <span>
        <input 
            type="radio" 
            name="type_of_class" 
            value="EAD"
            {% if teacher.type_of_class == "EAD" %}
                checked
            {% endif %} >EAD</span>
    <span>
        <input 
            type="radio" 
            name="type_of_class" 
            value="Presencial" 
            {% if teacher.type_of_class == "Presencial" %}
                checked
            {% endif %} >Presencial</span>
</div>

<div class="item">
    <div>Área de atuação</div>
    <div>
        <input list="browsers" placeholder="Engenharia de software" name="ocupation" >
            <datalist id="browsers">
                <option value="Engenharia de software">
                <option value="Ciência de dados">
                <option value="Mobile">
                <option value="Desenvolvedor Web">
                <option value="Inteligência Artificial">
        </datalist>
    </div>
</div>

<button type="submit">Salvar</button>
